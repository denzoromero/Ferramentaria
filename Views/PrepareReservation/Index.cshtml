


@await Component.InvokeAsync("ValuePartial")

<div class="modal fade" id="qrCodeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">QR Code</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="video-container">
                    <div style="height: 200px; width: 200px;">
                        <video id="webcam-preview" autoplay style="height: 200px; width: 200px;"></video>
                    </div>
                    <div class="row col-4">
                        <input type="text" class="form-control" placeholder="Chave" id="chaveInput">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row mt-2 mb-4">
        <div class="col-4">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#qrCodeModal">
                QR Code
            </button>
        </div>
    </div>
</div>

