                        }
                        else if (value.ActualStatus == "Prepared")
                        {
                        <img src="~/img/check-circle-fill.svg" />
                        }
                        else
                        {

                        }    *@
                            </td>
                            <td class="text-center align-middle">@value.ControlId</td>
                            <td class="text-center align-middle">@value.itemCount</td>
                            <td class="text-center align-middle">@value.PreparingCount</td>
                            <td class="text-center align-middle">@value.PreparedCount</td>
