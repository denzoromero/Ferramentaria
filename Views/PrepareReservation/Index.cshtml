                        <th class="text-center align-middle">Prepared</th>
                        <th class="text-center align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ReservationsModel? value in ViewBag.ReservationList as IEnumerable<ReservationsModel>)
                    {
                        <tr>
                            <td class="text-center align-middle">
