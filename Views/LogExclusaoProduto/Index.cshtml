<script>

    function confirmDelete(itemId) {
        if (confirm('Are you sure you want to delete this item?')) {
            var data = { itemId: itemId };

            $.ajax({
                type: 'POST',
                url: '/LogExclusaoProduto/DeleteConfirmed?id=' + itemId, // Replace with your actual URL
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                async: true,
                success: function () {
                    alert('Item deleted successfully.');
                    window.location.href = '/LogExclusaoProduto/Index';
                },
                error: function (xhr, textStatus, errorThrown) {
                    // Error: display the error message or handle it as needed
                    console.error(xhr.responseText);
                    alert('An error occurred while deleting the LogExclusaoProduto item: ' + errorThrown);
                }
            });
        }
    }
</script>